# Configuración del Sistema OCR
NODE_ENV=development

# Puerto del servidor OCR
OCR_PORT=3001

# Configuración de base de datos (usar la misma que el proyecto principal)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tu_base_de_datos
DB_USER=tu_usuario
DB_PASS=tu_password

# Configuración de OCR
OCR_UPLOAD_DIR=./uploads
OCR_MAX_FILE_SIZE=10485760
OCR_ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,tiff,bmp,webp

# Configuración de Tesseract
TESSERACT_LANG=spa+eng
TESSERACT_PSM=6
TESSERACT_OEM=3

# Configuración de Machine Learning
ML_CONFIDENCE_THRESHOLD=0.7
ML_PATTERN_MIN_FREQUENCY=5
ML_TRAINING_BATCH_SIZE=100
ML_AUTO_RETRAIN_INTERVAL=24

# Configuración de seguridad
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
UPLOAD_RATE_LIMIT=10

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=./logs/ocr-system.log

# Configuración de cache
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# URLs permitidas para CORS (separadas por comas)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
